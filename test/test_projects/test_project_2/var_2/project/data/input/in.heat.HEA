# LAMMPS input script generated by PyLammps
# Initialise simulation
atom_style     atomic
units          metal
read_data     /home/winniebird/sfarrelly2024/test/test_projects/test_project_2/var_2/project/data/output/after_relax.data
# 5 elements of HEA: Ni Co Ti Zr Hf specorder
mass           1 58.693
mass           2 58.933
mass           3 47.867
mass           4 91.224
mass           5 178.49
# Reading snap potential files
pair_style     snap
pair_coeff     * * /home/winniebird/sfarrelly2024/test/sez26_package/SNAP_potentials/HEA_var1.snapcoeff /home/winniebird/sfarrelly2024/test/sez26_package/SNAP_potentials/HEA_var1.snapparam Ni Co Ti Zr Hf
# Setup standard output
variable       avg_lxyz equal (lx+ly+lz)/3.0
thermo_style   custom step temp pe pxx pyy pzz density
thermo         100
# Set up and run MD in NPT ensemble
timestep       0.001
neighbor       1.0 bin
neigh_modify   every 5 delay 0 check yes
reset_timestep 0
dump		    1 all custom 1000 /home/winniebird/sfarrelly2024/test/test_projects/test_project_2/var_2/project/data/output/md_npt_dump.cfg id type x y z
fix		    1 all npt temp 300.0 300.0 0.1 aniso 0 0 1.0
fix		    avg all ave/time 10 100 1000 c_thermo_temp v_avg_lxyz
run		    1000
unfix		    1
variable       avg_T equal f_avg[1]
variable       L equal f_avg[2]
variable       L0 equal ${L}
print          "Temp Strain" file /home/winniebird/sfarrelly2024/test/test_projects/test_project_2/var_2/project/data/output/Record_thermal_exp.txt
print          "${avg_T}    0.0" append /home/winniebird/sfarrelly2024/test/test_projects/test_project_2/var_2/project/data/output/Record_thermal_exp.txt
unfix          avg
variable	    n loop 3
label          heat
variable       t equal 300.0+${n}*50
fix            1 all npt temp ${t} ${t} 0.1 aniso 0 0 1.0
fix		    avg all ave/time 10 100 1000 c_thermo_temp v_avg_lxyz
run		    1000
unfix		    1
variable       avg_T equal f_avg[1]
variable       strain equal f_avg[2]/${L0}-1.0
print          "${avg_T}    ${strain}" append /home/winniebird/sfarrelly2024/test/test_projects/test_project_2/var_2/project/data/output/Record_thermal_exp.txt
unfix          avg
next           n
jump          /home/winniebird/sfarrelly2024/test/test_projects/test_project_2/var_2/project/data/input/in.heat.HEA heat